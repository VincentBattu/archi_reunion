{% extends '@App/base.html.twig' %}

{% block title %}
    Comptes rendus
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <div class="container">
        <table class="table">
            <thead class="thead-default">
                <tr>
                    <th>#</th>
                    <th>Titre</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                {% for point in points %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ point.title }}</td>
                        <td>{{ point.report }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function(){
            $('table').DataTable({
                ordering: true,
                info:     true
            });
        });
    </script>
{% endblock %}