{% extends '@App/base.html.twig' %}

{% block title %}
    Comptes rendus officiels
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css">
{% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="page-header">
            <h1>Comptes rendus officiels</h1>
        </div>

        <table class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead class="thead-default">
                <tr>
                    <th>#</th>
                    <th>Titre</th>
                    <th>Original</th>
                    <th>Officiel</th>
                    <th>Diff√©rence</th>
                </tr>
            </thead>
            <tbody>
                {% for point in points %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ point.title }}</td>
                        <td class="original">{{ point.report }}</td>
                        <td class="changed">{{ point.officialReport }}</td>
                        <td class="diff"></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/diff_match_patch/20121119/diff_match_patch.js"></script>
    <script src="{{ asset('bundles/app/js/pretty-text-diff.min.js') }}"></script>


    <script>
        $(document).ready(function(){

            $("tr").prettyTextDiff({

            });

            $('table').DataTable({
                ordering: true,
                info:     true,
                language:{
                    "url": "http://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
                }
            });
        });
    </script>
{% endblock %}